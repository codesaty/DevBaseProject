@model List<DevBase.Entities.Tangible.Product>

@{
    Layout = "_DevBaseLayout";
}
<form method="post" asp-action="Index">
    <section id="HighSortPage" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="items-header">
                        <h2>Welcome to the Talent Competition</h2>
                        <hr class="border-secondary">
                    </div>

                    <div class="input-group">
                        <input type="text" id="searchedProduct" name="searchedProduct" class="form-control form-control-sm" placeholder="Product Search">
                        <div class="search-button">
                            <input type="submit" value="Search" class="btn btn-outline-primary btn-sm">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">All Products</a>
                        </div>
                    </div>
                    <br>

                    <div class="add-product-sort">
                        <a asp-controller="Home" asp-action="HightPriceProducts" class="btn btn-light btn-sm" style="font-family: 'Arial Narrow',serif">Highest price <i class="fas fa-arrow-up"></i></a>
                        <a asp-controller="Home" asp-action="LowestPriceProducts" class="btn btn-light btn-sm" style="font-family: 'Arial Narrow',serif">Lowest price <i class="fas fa-arrow-down"></i></a>
                        <a asp-controller="Home" asp-action="SortName" class="btn btn-light btn-sm" style="font-family: 'Arial Narrow',serif">By name <i class="fas fa-sort-alpha-up"></i></a>
                        <small class="alert-warning">The last product loaded is on top.</small>
                        <a asp-controller="Home" asp-action="InsertProduct" class="btn btn-outline-success float-right mb-1 btn-sm">Add Product</a>
                    </div>
                    @if (Model.Count != 0)
                    {
                        <table class="table">
                            <thead class="thead-dark">
                            <tr>
                                <th scope="col">Product Id</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Product Price</th>
                                <th scope="col" class="text-success">Update Product</th>
                                <th scope="col" class="text-danger">Remove Product</th>


                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var product in Model)
                            {
                                <tr style="font-family:'Global Sans Serif',serif; font-size: 18px;">
                                    <td>@product.ProductId</td>
                                    <td class="font-weight-bold">@product.ProductName</td>
                                    <td>@product.ProductPrice</td>
                                    <td>
                                        <a asp-controller="Home" asp-action="ModifiedProduct" asp-route-productId="@product.ProductId" class="btn btn-outline-secondary">Update Product</a>
                                    </td>

                                    <td>
                                        <a asp-controller="Home" asp-action="RemoveProduct" asp-route-productId="@product.ProductId" onclick="return confirm('@product.ProductName , Bu Ürünü Silmek İstediğiniz den emin misiniz?')" class="btn btn-outline-warning">Remove Product</a>
                                    </td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="not-found text-center mt-5">
                            <h2 class="alert-danger">Product not found.</h2>

                        </div>
                    }
                </div>

            </div>
        </div>
    </section>
</form>